<h1>Books</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th></th>
        </tr>
    </thead>
    <% @books.each do |book|%>

        <tbody>
            <tr>
                <td><%= book.title %></td>
                <td><%=book.body %></td>
                <td><%= link_to "Show", book_path(book.id) %></td>
                <td><%= link_to "Edit", edit_book_path(book.id) %></td>
                <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
            </tr>    
        </tbody>
    <% end %>
</table>

<h2>New book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:

  <ul>
    <% @book.errors.full_messages.each do |messages| %>
    
    <li><%= messages %></li>
    
    <% end %>
  </ul>
<% end %>

<%= form_with model:@book do |f| %>

 <p>Title</p>
 <%= f.text_field :title %>

 <p>Body</p>
 <%= f.text_area :body %>

<p></p>
 <%= f.submit 'Create Book' %>
<% end %>